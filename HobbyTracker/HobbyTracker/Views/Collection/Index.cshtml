@model IEnumerable<HobbyTracker.Models.Collection>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create A New Collection", "Create")
</p>
<p>
     @Html.ActionLink("Create A New Item", "Create", "Item")
</p>
<p>
    @Html.ActionLink("Add An Item To My Collection", "Create", "CollectionItem")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genre.GenreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CollectionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.GenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CollectionName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CollectionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CollectionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CollectionID })
        </td>
    </tr>
}

</table>
