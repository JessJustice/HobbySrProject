<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hobby Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrap">
       
       <ul id="sidebar">
           <li>@Html.Partial("_LoginPartial")</li>
           <li>@Html.ActionLink("Home", "Index", "Home")</li>
           <li>@Html.ActionLink("About", "About", "Home")</li>
           <li>@Html.ActionLink("Items", "Index", "Item")</li>
           <li>@Html.ActionLink("Users", "Index", "User")</li>
           <li>@Html.ActionLink("Collections", "Index", "Collection")</li>
           <li>@Html.ActionLink("Genres", "Index", "Genre")</li>
           <li>@Html.ActionLink("CollectionItems", "Index", "CollectionItem")</li>
       </ul>


        <main>
            @RenderBody()

        </main>


        <footer>
            <p>&copy; @DateTime.Now.Year - Hobby Tracker by WOU Crew</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
