@model IEnumerable<HobbyTracker.Models.CollectionItem>

@{
    ViewBag.Title = "Details2";
}

<h2>Details</h2>

<div>
    <h4>CollectionItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Collection.CollectionName)
        </dt>

        @*<dd>
                @Html.DisplayFor(model => model.Collection.CollectionName)
            </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.Item.ItemName)
        </dt>

        @*<dd>
                @Html.DisplayFor(model => model.Item.ItemName)
            </dd>*@

    </dl>
</div>

<div class="panel-heading text-center"><h2>Items in the Selected Collection</h2></div>
<table class="table table-bordered table table-striped table-hover">
    <tr>
        <th>Item Name</th>
        <th>Description</th>
        <th>Notes</th>
        <th>I own?</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr align="center">
            <td>
                @item.Item.ItemName
            </td>
            <td>
                @item.Item.ItemDesc
            </td>
            <td>
                @item.Note
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IOwn)
            </td>
            @*<td>
                    @item.IOwn
                </td>*@
            <td>
                @Html.ActionLink("Delete this Item", "Delete", "CollectionItem", new { id = item.CollectionItemID }, null)
            </td>
            <td>
                @Html.ActionLink("Edit Notes", "Edit", "CollectionItem", new { id = item.CollectionItemID }, null)
            </td>
        </tr>
    }
</table>



