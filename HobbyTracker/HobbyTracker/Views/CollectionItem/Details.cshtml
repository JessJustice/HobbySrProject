@model IEnumerable<HobbyTracker.Models.CollectionItem>

@{
    ViewBag.Title = "My Collection";
}
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
    <title>Details</title>
    
</head>


<body>
    <div class=" panel panel-warning">
        <div class="panel-heading text-center"><h2>My Item</h2></div>
        <div class="panel-bady">

            <p class="text-danger">
               
                @Html.ActionLink("Back to My Collections", "Index", "Collection") <br />
                @Html.ActionLink("Browse Items", "Index", "Item") <br />
                @Html.ActionLink("Create A New Item", "Create", "Item") <br />
            </p>

            <div class="panel-heading text-center"><h2>My Items</h2></div>
            @using (Html.BeginForm())
            {
                <p>
                    Search by name: @Html.TextBox("Search")
                    <input type="submit" value="Search" />
                </p>
            }

            <table class="table table-hover">
                <tr>

                    <th>
                        @Html.ActionLink("Name", "Details", new { sortOrder = ViewBag.NameSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Description", "Details", new { sortOrder = ViewBag.DescSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Note", "Details", new { sortOrder = ViewBag.NoteSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Own", "Details", new { sortOrder = ViewBag.OwnSortParm })
                    </th>
                    <th></th>
                </tr>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.ItemName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.ItemDesc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IOwn)
                        </td>
                        <td>
                            @*@Html.ActionLink("Add Item", "Create", "CollectionItem", new { id = item.CollectionID }, new { }) |*@
                            @Html.ActionLink("Edit", "Edit", new { id = item.CollectionID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.CollectionID })
                            @Html.ActionLink("Details", "Details", "CollectionItem", new { id = item.CollectionID }, new { })
                        </td>
                    </tr>
                }
            </table>


        </div>
    </div>
</body>
