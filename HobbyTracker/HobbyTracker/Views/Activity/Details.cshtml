@model HobbyTracker.Models.Activity

@{
    ViewBag.Title = "Details";
}

<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
    <title>Details</title>
</head>

<h2>@Html.DisplayFor(model => model.ActName)</h2>

<div>
    <h4>Activity Information</h4>
    <hr />
    <dl class="dl-horizontal">
 
        Contact Information


        <dd>
            Email: @Html.DisplayFor(model => model.Email)
        </dd>

        <dd>
            Phone: @Html.DisplayFor(model => model.Phone)
        </dd>

    </dl>
</div>
<p>
    @if (User.Identity.Name == Model.UserName)
    {
    @Html.ActionLink("Edit", "Edit", new { id = Model.ActivityID })
    @Html.ActionLink("Delete", "Delete", new { id = Model.ActivityID }) };
    | @Html.ActionLink("Back to List", "Index")
</p>